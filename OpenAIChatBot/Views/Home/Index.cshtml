<script>
    $(document).ready(function() {
        // Animate counters
        function animateCounter(element) {
            const target = parseInt(element.data('count'));
            const duration = 2000;
            const increment = target / (duration / 16);
            let current = 0;

            const timer = setInterval(function() {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                element.text(Math.floor(current) + (element.parent().find('.stat-label').text().includes('%') ? '%' : ''));
            }, 16);
        }

        // Trigger counter animation when stats section is visible
        const statsSection = $('.stats-section');
        let statsAnimated = false;

        $(window).scroll(function() {
            if (!statsAnimated && $(window).scrollTop() + $(window).height() > statsSection.offset().top + 100) {
                $('.stat-number').each(function() {
                    animateCounter($(this));
                });
                statsAnimated = true;
            }
        });

        // Demo chat simulation
        setTimeout(function() {
            $('#demoTyping').hide();
            const botResponse = `
                <div class="demo-message bot">
                    <div class="demo-message-content">
                        Perfect! Here's a short story for you:<br><br>
                        <strong>"The Partnership"</strong><br><br>
                        In 2045, Dr. Sarah Chen watched as ARIA, her AI research partner, analyzed climate data in seconds that would take her team months to process. "I've found a solution," ARIA announced, "but I need human intuition to make it work." Together, they developed breakthrough technology that saved millions of lives. It wasn't about AI replacing humans—it was about the magic that happened when both worked as one.
                    </div>
                </div>
            `;
            $('#demoChat').append(botResponse);
            $('#demoChat').scrollTop($('#demoChat')[0].scrollHeight);
        }, 3000);

        // Smooth scrolling for anchor links
        $('a[href^="#"]').on('click', function(event) {
            const target = $(this.getAttribute('href'));
            if (target.length) {
                event.preventDefault();
                $('html, body').stop().animate({
                    scrollTop: target.offset().top - 100
                }, 1000);
            }
        });

        // Add parallax effect to hero section
        $(window).scroll(function() {
            const scroll = $(window).scrollTop();
            const parallax = scroll * 0.5;
            $('.hero-section').css('transform', 'translateY(' + parallax + 'px)');
        });

        // Animate feature cards on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(function(entry) {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        $('.feature-card').each(function(index) {
            $(this).css({
                'opacity': '0',
                'transform': 'translateY(50px)',
                'transition': 'all 0.6s ease ' + (index * 0.1) + 's'
            });
            observer.observe(this);
        });
    });
</script>